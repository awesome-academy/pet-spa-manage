<% provide(:title, t(".comments")) %>
<div class="row">
  <div class="col-lg-12">
    <div class="table-toolbar">
      <%= form_tag "/search", class: "search", method: :get do %>
        <%= label_tag(:q, t(".post")) %>
        <%= text_field_tag(:q) %>
        <%= label_tag(:q, t(".user")) %>
        <%= text_field_tag(:q) %>
        <%= submit_tag(t(".search")) %>
      <% end %>
    </div>
    <div class="panel panel-default">
      <div class="panel-body">
        <table width="100%" class="table table-bordered table-hover" id="datatable">
          <thead>
            <tr>
              <th><%= t ".stt" %></th>
              <th><%= t ".post" %></th>
              <th><%= t ".user" %></th>
              <th><%= t ".content" %></th>
              <th><%= t ".created_at" %></th>
              <th><%= t ".action" %></th>
            </tr>
          </thead>
          <tbody>
            <% @comments.each_with_index do |comment,index| %>
            <tr>
              <td><%= create_index params[:page], index, Settings.per_page %></td>
              <td><%= comment.post_title%></td>
              <td><%= comment.user_name %></td>
              <td><%= comment.content %></td>
              <td><%= comment.created_at %></td>
              <td>
                <%= link_to t(".delete"), admin_comment_path(comment.id),
                method: :delete, data: {confirm: t(".confirm")}, class: "btn btn-danger" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @comments %>
      </div>
    </div>
  </div>
</div>
