<% provide(:title, t(".orders")) %>
<div class="row">
  <div class="col-lg-12">
    <div class="table-toolbar">
      <%= link_to t(".back_to_order"), admin_orders_path, class: "btn btn-success" %>
    </div>
    <div class="panel panel-default">
      <div class="panel-body">
        <table width="100%" class="table table-bordered table-hover" id="datatable">
          <thead>
            <tr>
              <th><%= t ".order" %></th>
              <th><%= t ".pet" %></th>
              <th><%= t ".service" %></th>
              <th><%= t ".action" %></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @detail.order.id %></td>
              <td><%= @detail.pet_name %></td>
              <td><%= @detail.service_name %></td>
              <td><%= @detail.created_at %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
