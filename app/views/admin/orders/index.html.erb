<% provide(:title, t(".orders")) %>
<div class="row">
  <div class="col-lg-12">
    <div class="table-toolbar">
      <%= link_to t(".add"), new_admin_order_path, class: "btn btn-success" %>
    </div>
    <div class="panel panel-default">
      <div class="panel-body">
        <table width="100%" class="table table-bordered table-hover" id="datatable">
          <thead>
            <tr>
              <th><%= t ".stt" %></th>
              <th><%= t ".date" %></th>
              <th><%= t ".user" %></th>
              <th><%= t ".created_at" %></th>
              <th><%= t ".action" %></th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each_with_index do |s,index| %>
            <tr>
              <td><%= create_index params[:page], index, Settings.per_page %></td>
              <td><%= s.date %></td>
              <td><%= s.user_name %></td>
              <td><%= s.created_at %></td>
              <td>
                <%= link_to t(".detail"), admin_order_detail_path(s), class: "btn btn-success" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @orders %>
      </div>
    </div>
  </div>
</div>
