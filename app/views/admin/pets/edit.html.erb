<% provide(:title, t(".edit_pet")) %>
<% provide(:button_text, t(".save_change")) %>
<h1><%= t ".edit_pet" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @pet] do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label :name %>
      <%= f.text_area :name, class: "form-control" %>

      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>

      <%= f.submit t(".save_change"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
