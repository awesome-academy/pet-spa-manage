<% provide(:title, t(".edit_post")) %>
<% provide(:button_text, t(".save_change")) %>
<h1><%= t ".edit_post" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @postz] do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label :title %>
      <%= f.text_area :title, class: "form-control" %>

      <%= f.label :content %>
      <%= f.text_area :content, class: "form-control" %>

      <%= f.label :sumary %>
      <%= f.text_area :sumary, class: "form-control" %>

      <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png",
        class: "picture" %>

      <%= f.label :status %>
      <%= f.select :status, options_for_select(show_status,
        selected: @post.status) %>

      <%= f.submit t(".save_change"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
