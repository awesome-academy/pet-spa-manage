<% provide :title, t(".title") %>
<div class="col-md-8">
  <%= form_for [:admin, @service], class: "nifty_form" do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :status %>
    <%= f.select :status, options_for_select(show_status,
      {selected: @service.status}) %>
    <%= f.label :picture %>
    <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png",
      class: "picture" %>
    <%= f.label :price %>
    <%= f.text_field :price %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.submit t(".create"), class: "col-md-3 btn btn-success" %>
  <% end %>
</div>
