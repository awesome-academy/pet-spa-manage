<% provide(:title, t(".stats")) %>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <h1><%= t ".service_most_used" %></h1>
        <table width="100%" class="table table-bordered table-hover" id="datatable">
          <thead>
            <tr>
              <th><%= t ".service_name" %></th>
              <th><%= t ".description" %></th>
              <th><%= t ".price" %></th>
            </tr>
          </thead>
          <tbody>
            <% @service.each do |service| %>
            <tr>
              <td><%= service.name %></td>
              <td><%= service.description %></td>
              <td><%= service.price %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <h1><%= t ".revenue_monthly" %><%= Settings.year_stats %></h1>
        <table width="100%" class="table table-bordered table-hover" id="datatable">
          <thead>
            <tr>
              <th><%= t ".month" %></th>
              <th><%= t ".revenue" %></th>
            </tr>
          </thead>
          <tbody>
            <% (1..12).each do |item| %>
              <tr>
                <td><%= item %></td>
                <% if @revenue.key? item %>
                  <td><%= @revenue[item] %></td>
                <% else %>
                  <td> 0 </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
