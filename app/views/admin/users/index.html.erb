<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="table-toolbar">
          <%= form_tag admin_users_path, class: "search", method: :get do %>
            <%= text_field_tag :term, params[:term], placeholder: t(".search_by") %>
            <%= submit_tag t(".search"), class: "btn btn-primary" %>
          <% end %>
        </div>
        <table width="100%" class="table table-bordered table-hover" id="datatable">
          <thead>
            <tr>
              <th><%= t ".stt" %></th>
              <th><%= t ".avatar" %></th>
              <th><%= t ".user_name" %></th>
              <th><%= t ".user_email" %></th>
              <th><%= t ".user_phone" %></th>
              <th><%= t ".user_address" %></th>
              <th><%= t ".created_at" %></th>
              <th><%= t ".action" %></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each_with_index do |user,index| %>
            <tr>
              <td><%= create_index params[:page], index, Settings.per_page %></td>
              <td><%= gravatar_for user %></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.phone %></td>
              <td><%= user.address %></td>
              <td><%= user.created_at %></td>
              <td>
                <%= link_to t(".delete"), admin_user_path(user.id),
                method: :delete, data: {confirm: t(".confirm")}, class: "btn btn-danger" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>
