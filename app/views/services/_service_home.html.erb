<div class="vc_row wpb_row block-product2">
  <div class="wpb_column column_container col-sm-12">
    <h2 class="title30 font-bold text-uppercase"><%= t ".our_service" %></h2>
    <div class="owl-wrapper" >
      <div class="owl-item active service">
        <% @services.each do |s| %>
        <div class="item">
          <div class="product-type-simple">
            <div class="item-product item-product-grid">
              <div class="product-thumb">
                <%= link_to service_path(s) do %>
                  <%= image_tag s.picture.url if s.picture? %>
                <% end %>
                <div class="product-info">
                  <h3 class="title18 text-uppercase product-title dosis-font font-bold">
                    <%= link_to s.name, service_path(s) %>
                  </h3>
                  <p class="white"><%= truncate(s.description, length: 100) %></p>
                  <div class="product-price simple"><ins><span class="woocommerce-Price-amount amount"><span class="woocommerce-Price-currencySymbol">$</span><%= s.price %></span></ins></div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
